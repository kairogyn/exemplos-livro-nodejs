<% include ../header %>
<% include notify_script %>
        <header>
           <h2>Agenda de Contatos</h2>
        </header>
        <section>
        <form  action="/contato" method="post" > 
        <input type="text" name="contato[nome]" placeholder="Nome">
        <input type="text" name="contato[email]" placeholder="E-mail">
        <button type="submit">Cadastrar</button>
        </form>
        <br>
        <table style="width:80%;" class="table table-bordered">
        <thead>
        <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Status</th>
        <th>Ação</th>
        </tr>
        </thead>
        <% contatos.forEach(function(contato) { %>
        <tr>
        <td><%- contato.nome%></td>
        <td><%- contato.email%></td>
        <td><span id="notify_<%- contato.email%>" class="label label-default">Offline</span></td>
        <td><a class="btn btn-default" href="/contato/<%-contato._id%>">Detalhes</a> <a href="/chat" class="btn btn-success" id="chat_<%- contato.email%>">Conversar</a></td>
        </tr>
        
        <%
        })
        %>
        </table>
          
        </section>
<% include ../exit %>
<% include ../footer %>